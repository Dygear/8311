{% extends "device.tmpl" %}

{% if device.odm is defined %}
{% set odm = onu_type[device.odm] %}
{% else %}
{% set odm = device %}
{% endif %}

{% set onu = calculate_onu(device, odm) %}

{% block specifications %}
{% if onu.specifications is defined and onu.specifications %}
## Specifications

{{ specifications_tables(onu) }}
{% endif %}
{% endblock %}

{% block images %}
{% if onu.images is defined and onu.images %}
## Images

{{ includes.iterate_images(onu) }}
{% endif %}
{% endblock %}

{% block connections %}
{% if onu.connections is defined and onu.connections %}
## Login Credentials

{{ connections_table(onu) }}
{% endif %}
{% endblock %}

{% block vendor_credentials %}
{% set result = generate_vendor_credentials(odm, onu_type) if device == odm %}
{% if result %}
{{ result }}
{% endif %}
{% endblock %}

{% block notices %}
{% if onu.notices is defined and onu.notices %}
{{ iterate_notices(onu) }}
{% endif %}
{% endblock %}

{% block value_added_resellers %}
{% if device == odm and odm.resellers is defined %}
## Value-Added Resellers

{{ resellers_table(odm) }}
{% endif %}
{% endblock %}

{% block content %}
{% if onu.content is defined and onu.content %}
{% for content_group in onu.content %}
{{ includes.render_content_group(content_group) }}
{% endfor %}
{% endif %}
{% endblock %}
